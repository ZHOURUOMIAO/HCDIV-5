    <script>
        // Chart.js Example
        const ctx = document.getElementById('foodVsFeedChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['1961', '1970', '1980', '1990', '2000', '2010'], // Example years
                datasets: [
                    {
                        label: 'Food for Humans',
                        data: [100, 150, 200, 250, 300, 350], // Replace with real data
                        backgroundColor: 'rgba(75, 192, 192, 0.5)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Feed for Animals',
                        data: [80, 120, 180, 230, 280, 330], // Replace with real data
                        backgroundColor: 'rgba(255, 99, 132, 0.5)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    x: {
                        beginAtZero: true
                    },
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Leaflet Map Example
        const map = L.map('map').setView([20, 0], 2); // Centered at latitude 20, longitude 0
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 18
        }).addTo(map);

        // Example Marker (Replace with actual data)
        L.marker([51.5, -0.09]).addTo(map).bindPopup('Food Production Example in Europe').openPopup();
    </script>
